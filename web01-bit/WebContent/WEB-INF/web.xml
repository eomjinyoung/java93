<!-- 서블릿 클래스를 등록한다. -->
  <servlet>
    <!-- 유지보수 편하라고 별명을 클래스 이름으로 한다. -->
    <servlet-name>HelloServlet</servlet-name> <!-- 서블릿 클래스의 별명을 지정한다. -->
    <servlet-class>HelloServlet</servlet-class> <!-- 서블릿 클래스의 전체 이름을 적는다. -->
    <!-- <load-on-startup>1</load-on-startup> -->
  </servlet>
  
<!-- 
